    "nodemon": "^1.18.4"
  },
  "devDependencies": {
    "@types/koa": "^2.0.46",
    "@types/koa-bodyparser": "^5.0.1",
    "@types/koa-logger": "^3.1.0",
    "@types/koa-router": "^7.0.31",
    "@types/koa-static": "^4.0.0",
    "@types/mongodb": "^3.1.4",
    "@types/mongoose": "^5.2.9",
    "@types/node": "^10.9.3",
