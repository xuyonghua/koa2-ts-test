{
  "name": "koa2-ts-test",
  "version": "1.0.0",
  "description": "building Koa2 with TypeScript",
  "main": "app.js",
  "scripts": {
    "start": "ts-node app.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
